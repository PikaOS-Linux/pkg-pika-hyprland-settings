#!/bin/sh

set -e

cp -f /etc/skel/.config/examples/metadata.desktop /usr/share/plasma/desktoptheme/Orchis-dark/
cp -f /etc/skel/.config/examples/.profile /etc/skel/

 for u in /home/*
    do
        if ! test -f "${u}/.config/hypr/hypr.conf"
        then
            cp -R /etc/skel/ "${u}/"
        fi
    done